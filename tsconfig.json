{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noEmitHelpers": false,
    "strictNullChecks": false,
    "baseUrl": "./src"
  },
  //  "types": [
  //    "node",
  //    "jquery",
  //    "jasmine"
  //  ],
  "exclude": [
    "node_modules",
    "dist",
    "common",
    "spa",
    "extras"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}